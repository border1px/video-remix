{
  "manifest_version": 3,
  "name": "豆包图片下载器",
  "version": "1.1.0",
  "description": "在豆包等网站上下载生成的图片，支持TinyPNG压缩和缩放，带状态显示和失败重试功能",
  "permissions": [
    "storage",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.doubao.com/*",
    "https://api.tinify.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/config.js",
        "utils/tinypng.js",
        "utils/image-downloader.js",
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

